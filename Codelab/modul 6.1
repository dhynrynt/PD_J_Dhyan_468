#include <stdio.h>

int faktorial(int n) {
    if (n == 0 || n == 1) {
        return 1;
    } else {
        return n * faktorial(n - 1);
    }
}
void fibonacci(int n) {
    
    if (n == 0) {
        printf("0 ");
    } else if (n == 1) {
        printf("0 1 ");
    } else {
    	int i;
        int a = 0, b = 1, c;
        printf("0 1 ");
        for ( i = 2; i < n; i++) {
            c = a + b;
            printf("%d ", c);
            a = b;
            b = c;
        }
    }
}

int main() {
    int num_faktorial, num_fibonacci;

    printf("Masukkan angka untuk menghitung faktorial: ");
    scanf("%d", &num_faktorial);
    printf("Faktorial dari %d adalah %d\n", num_faktorial, faktorial(num_faktorial));

    printf("Masukkan jumlah suku Fibonacci yang ingin ditampilkan: ");
    scanf("%d", &num_fibonacci);
    printf("Deret Fibonacci hingga suku ke-%d adalah: ", num_fibonacci);
    fibonacci(num_fibonacci);
    printf("\n");

    return 0;
}