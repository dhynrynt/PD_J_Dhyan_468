#include <stdio.h>

int main() {
    int produk[2][3] = {
        {5, 8, 6}, 
        {3, 7, 9}  
    };
    int i,j;
    
    int total_produk[3] = {0, 0, 0};
    
    for ( i = 0; i < 3; i++) { 
        for ( j = 0; j < 2; j++) { 
            total_produk[i] += produk[j][i];
        }
    }
    
    printf("Total Penjualan untuk Setiap Produk:\n");
    for ( i = 0; i < 3; i++) {
        printf("Produk %c: %d\n", 'A' + i, total_produk[i]);
    }
    
    return 0;
}