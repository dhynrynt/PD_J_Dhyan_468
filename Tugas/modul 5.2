#include <stdio.h>

int main() {
    int n,i;   
    printf("Masukkan jumlah mahasiswa: ");
    scanf("%d", &n);
    
    
    float nilai[n][3]; 
    
    
    for ( i = 0; i < n; i++) {
        printf("Masukkan nilai untuk mahasiswa ke-%d (Matematika, Fisika, Kimia):\n", i + 1);
        scanf("%f %f %f", &nilai[i][0], &nilai[i][1], &nilai[i][2]);
    }
    
    float rataMatematika = 0, rataFisika = 0, rataKimia = 0, totalRata = 0;
    for ( i = 0; i < n; i++) {
        rataMatematika += nilai[i][0];
        rataFisika += nilai[i][1];
        rataKimia += nilai[i][2];
    }
    rataMatematika /= n;
    rataFisika /= n;
    rataKimia /= n;
    

    for ( i = 0; i < n; i++) {
        totalRata += (nilai[i][0] + nilai[i][1] + nilai[i][2]) / 3;
    }
    totalRata /= n;

    
    printf("\nData Nilai Ujian:\n");
    printf("Mahasiswa    Matematika    Fisika    Kimia\n");
    for ( i = 0; i < n; i++) {
        printf("Mhs %d     %.2f       %.2f      %.2f\n", i + 1, nilai[i][0], nilai[i][1], nilai[i][2]);
    }


    printf("\nRata-rata Nilai:\n");
    printf("Matematika: %.2f\n", rataMatematika);
    printf("Fisika: %.2f\n", rataFisika);
    printf("Kimia: %.2f\n", rataKimia);
    printf("Rata-rata Keseluruhan: %.2f\n", totalRata);
    
    return 0;
}
